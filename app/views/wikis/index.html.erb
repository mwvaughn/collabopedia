<h1>Wiki Confabs</h1>
<% if policy(Wiki.new).create? %>
<%= link_to "New Wiki Confabs", new_wiki_path, class: 'btn btn-success' %>
<% end %>
<% @wikis.each do |wiki| %>
  <div class="media">
     <div class="media-body">
       <h4 class="media-heading">
         <%= link_to wiki.title, wiki %>
       </h4>
       <% if current_user %>
        <small>
          Submitted by <%= current_user.email%>  <%= time_ago_in_words(wiki.created_at) %> ago
        </small>
       <% end %> 

     </div>
   </div>
<% end %>


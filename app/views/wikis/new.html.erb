<h1>New Wiki Confab</h1>
 
 <div class="row">
   <div class="col-md-4">
     <p>It's Confabulous to work together!</p>
     <ul>
       <li>Collaborate</li>
       <li>Disagree</li>
       <li>Confabulate</li>
     </ul>
   </div>
    
   <div class="col-md-8">
     <%= form_for @wiki do |f| %>
       <div class="form-group">
         <%= f.label :title %>
         <%= f.text_field :title, class: 'form-control', placeholder: "Enter wiki title" %>
       </div>
       <div class="form-group">
         <%= f.label :body %>
         <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter wiki body" %>
       </div>
       <div class="form-group">
          <% if current_user.premium?  || current_user.admin? %>
            <%#= check_box_tag(:private) %>
            <%#= label_tag(:private, "Make this Wiki private") %>
             
            <%#= form_for(@wiki) do |f| %>
              <div class="field">
                <%= f.label "Make This Wiki Private" %> <br />
                <%#= fields_for "@wiki[wiki_attributes][]", :private, new: true do |form| %>
                <%= f.check_box :private %> <br />
              </div>
            <% end %> 
            </div>
         <div class="form-group">
           <%= f.submit "Save", class: 'btn btn-success' %>
         </div>
       <% end %>       

   </div>
 </div>

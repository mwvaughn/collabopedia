<h1><%= markdown @wiki.title %></h1>
  <%if policy(@wiki).edit? %>
    <%= link_to "Edit", edit_wiki_path(@wiki), class: 'btn btn-success' %>
  <% end %>
  <% if @wiki.collaborators %>
    <%= link_to "Collaborators",  wiki_collaborators_path(@wiki), class: 'btn btn-default' %>
  <% end %>

<div class="row">
  <div class="col-md-8">
    <p><%= markdown @wiki.body %></p>
 </div>
